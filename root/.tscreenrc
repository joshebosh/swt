#/root/.screenrc

startup_message off
escape ^\b
bindkey ^H stuff meta

defscrollback 8000
# status line at the bottom
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.GK}%-w%{.rW}%f%n %t%{-}%+w %=%{..G}[%H %l] %{..Y} %m/%d %c "

